<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activities.CompassActivity">


    <LinearLayout
        android:id="@+id/layoutCompass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="100"
        android:visibility="visible">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_gravity="center">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="HEADING" />

                <TextView
                    android:id="@+id/headingDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/headingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="BEARING" />

                <TextView
                    android:id="@+id/bearingDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/bearingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="" />

            </TableRow>
        </TableLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/arrow_down"
            android:layout_weight="5"
            android:layout_gravity="center">
        </ImageView>

        <ImageView
            android:id="@+id/compass"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="58"
            android:layout_gravity="center"
            android:src="@drawable/compass2"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:weightSum="100"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRESENT"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TableRow>
                        <TextView
                            android:id="@+id/latPresent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latitude:"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/latPresentVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="32.234"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/lngPresent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Longitude:"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/lngPresentVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="-104.234"/>
                    </TableRow>
                </TableLayout>
                
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TableRow>
                        <TextView
                            android:id="@+id/latLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latitude:"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/latLocationVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="32.234"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/lngLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Longitude:"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/lngLocationVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="-104.234"/>
                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_gravity="center">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="DISTANCE" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="400" />

                <TextView
                    android:id="@+id/distanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Miles" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/linearButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/buttonWarning"
                    style="@style/AppTheme.ImageButton"
                    android:onClick="onWarningClick"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/warning" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonHome"
                    style="@style/AppTheme.Button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onHomeClick"
                    android:text="Home" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonNewTarget"
                    style="@style/AppTheme.Button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onNewTargetClick"
                    android:text="New Target" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layoutError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/red"
                android:text="Failed to query magnetic sensor. Try to perform device calibration as described below"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="To calibrate your device to use compass make sure you are away from any metal objects and complete the following movements three times slowly"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Keeping level to ground spin phone left or right completely around"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/calibration1"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Turn over end to end top edge to bottom or vice versa"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/calibration2"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Rotate completely around left side edge over to right or vice versa"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/calibration3"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>