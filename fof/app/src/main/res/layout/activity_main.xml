                    android:text="Contact"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_button_text_size"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/home_icon_margin"
                android:layout_weight="25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="@dimen/home_button_width"
                    android:layout_height="@dimen/home_button_height"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/about" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_button_text_size"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/home_icon_margin"
                android:layout_weight="25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="@dimen/home_button_width"
                    android:layout_height="@dimen/home_button_height"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/fruitmachine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Get Lucky"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_button_text_size"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/home_icon_margin"
                android:layout_weight="25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="@dimen/home_button_width"
                    android:layout_height="@dimen/home_button_height"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/quiz" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Quiz"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_button_text_size"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_transparent" />
</android.support.constraint.ConstraintLayout>